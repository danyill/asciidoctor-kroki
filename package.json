{
  "name": "asciidoctor-kroki",
  "version": "0.8.2",
  "description": "Asciidoctor extension to convert diagrams to images using Kroki",
  "main": "src/asciidoctor-kroki.js",
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "test": "npm run test:node && npm run test:browser",
    "test:node": "mocha test/**.spec.js",
    "test:browser": "node test/browser/run.js",
    "lint": "standard src/**.js test/**.js",
    "clean": "rm -rf dist/*",
    "dist": "npm run clean && npm run dist:browser",
    "dist:browser": "mkdir -p dist/browser && browserify src/asciidoctor-kroki.js --exclude ./fetch.js --exclude ./antora-adapter.js --standalone AsciidoctorKroki -o dist/browser/asciidoctor-kroki.js"
  },
  "dependencies": {
    "json5": "^2.1.3",
    "mkdirp": "^1.0.4",
    "pako": "^1.0.10",
    "rusha": "^0.8.13",
    "unxhr": "1.0.4"
  },
  "devDependencies": {
    "@asciidoctor/core": "^2.0.3",
    "browserify": "^16.3.0",
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "libnpmpublish": "^3.0.1",
    "lodash": "^4.17.14",
    "mocha": "^7.1.0",
    "puppeteer": "^3.0.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.1",
    "standard": "^14.3.3"
  },
  "peerDependencies": {
    "@asciidoctor/core": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mogztter/asciidoctor-kroki.git"
  },
  "keywords": [
    "asciidoctor",
    "kroki",
    "diagrams",
    "javascript",
    "extension"
  ],
  "author": "Guillaume Grossetie (https://github.com/mogztter)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mogztter/asciidoctor-kroki/issues"
  },
  "homepage": "https://github.com/Mogztter/asciidoctor-kroki#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  }
}
